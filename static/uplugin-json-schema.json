{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "FileVersion",
    "Version",
    "Plugins",
    "GameVersion"
  ],
  "properties": {
    "CanContainContent": {
      "type": "boolean"
    },
    "FileVersion": {
      "type": "integer",
      "const": 3
    },
    "Modules": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "LoadingPhase": {
              "type": "string"
            },
            "Name": {
              "type": "string"
            },
            "Type": {
              "type": "string"
            }
          }
        }
      ]
    },
    "GameVersion": {
      "type": "string"
    },
    "Plugins": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "required": [
            "Name"
          ],
          "properties": {
            "Name": {
              "type": "string"
            },
            "SemVersion": {
              "type": "string",
              "pattern": "^(<=|<|>|>=|\\^)?(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
            },
            "Optional": {
              "type": "boolean"
            },
            "BasePlugin": {
              "type": "boolean"
            }
          },
          "if": {
            "properties": {
              "BasePlugin": { "const": false }
            }
          },
          "then": {
            "required": [
              "SemVersion"
            ]
          }
        }
      ]
    },
    "SemVersion": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
    },
    "Version": {
      "type": "integer"
    }
  }
}